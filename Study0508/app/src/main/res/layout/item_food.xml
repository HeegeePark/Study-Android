<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#DBDADA"
        android:paddingBottom="10dp"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="@dimen/itemFoodY">

    <ImageView
            android:id="@+id/iv_food"
            android:layout_width="@dimen/foodImage"
            android:layout_height="@dimen/foodImage"
            android:src="#FDBDBD"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="TODO"/>

    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음식이름"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/iv_food"
            app:layout_constraintTop_toTopOf="@+id/iv_food"
            android:lastBaselineToBottomHeight="@+id/iv_food"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/iv_food"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintVertical_bias="0.469"/>

</android.support.constraint.ConstraintLayout>